{namespace base}

/**
 */
{template .render private="true"}
	{@param content: ?}
	{@param page: ?}
	{@param serialized: ?}
	{@param site: ?}
	{@param? scripts: ?}

	<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta content="minimum-scale=1.0, width=device-width" name="viewport">
		<meta name="description" content="{$page.description ?: ''}">
		// <!-- Google Tag Manager -->
		<script src="/scripts/google-tag-manager.js"></script>
		// <!-- End Google Tag Manager -->
		// <meta name="google-site-verification" content="sZKtu-zl8i3qCUEmU6yic1J5nEGVIQk7Owl5wP1Qg2w">
		<link href="/favicon.ico" rel="shortcut icon" />
		<link href="/favicon.ico" rel="icon" sizes="16x16 32x32" />
		<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#0B63CE">
		<link rel="manifest" href="/favicons/site.webmanifest">
		<meta name="msapplication-TileColor" content="#0B63CE">
		<meta name="theme-color" content="#0B63CE">

		<title>{$page.title} - {$site.title}</title>

		<!-- inject:css -->
		<!-- endinject -->

		<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900" rel="stylesheet">

		<script src="/scripts/jquery.min.js"></script>
		<script src="/scripts/popper.js"></script>

		<!-- inject:js -->
		<!-- endinject -->

		<script>svg4everybody();</script>

		<link rel="stylesheet" href="/styles/main.css">
	</head>
	<body data-senna>
		// <!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WWQK8ZR"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		// <!-- End Google Tag Manager (noscript) -->
		<div data-senna-surface id="wrapper">
			<div class="senna-loading-bar" style="background: linear-gradient(to right, rgba(11, 99, 206, 1), rgba(32, 69, 137, 1));"></div>

			<!-- inject:metal:js -->
				<div>
					{$content}
				</div>
			<!-- endinject -->
		</div>

		{if $scripts}
			{foreach $script in $scripts}
				<script src="{$script}"></script>
			{/foreach}
		{/if}

		<!-- inject:vendor:js -->
		<!-- endinject -->
	</body>
	</html>
{/template}